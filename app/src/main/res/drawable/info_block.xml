<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners android:radius="20sp" />

    <gradient
        android:endColor="@color/purple_200"
        android:startColor="#FFFFFF"
        android:angle="90" />

    <padding
        android:bottom="5sp"
        android:left="7.5sp"
        android:right="7.5sp"
        android:top="7.5sp">
    </padding>

    <stroke android:width="2sp" android:color="?attr/colorPrimary" />
    <padding
        android:left="2sp"
        android:top="2sp"
        android:right="2sp"
        android:bottom="2sp" />

</shape>
