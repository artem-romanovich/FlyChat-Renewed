<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:id="@+id/all_message"
    android:layout_marginStart="75sp"
    android:layout_marginEnd="10sp"
    android:layout_marginBottom="5sp"
    android:layout_marginTop="5sp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/time_message"
        style="@style/FontThinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="1sp"
        android:gravity="end"
        android:text="time"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_user"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="text"
            android:layout_marginBottom="5sp"
            android:layout_marginStart="8.5sp"
            android:layout_marginEnd="7.5sp"
            android:layout_marginTop="7.5sp"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>